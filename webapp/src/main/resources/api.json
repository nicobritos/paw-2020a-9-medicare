                    {
                        "in": "query",
                        "name": "toDay",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 31
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful",

                        "content": {
                            "application/vnd.appointment-timeslot.list.get.v1+json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
