                    }
                }
            },
            "locality": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "province": {
                        "$ref": "#/components/schemas/province"
                    }
                }
            },

            "user": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "surname": {
                        "type": "string"
                    },
                    "verified": {
                        "type": "boolean"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "profilePictureId": {
                        "type": "integer"
                    }
                }
            },
            "updateUser": {
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "nullable": false
                    },
                    "firstName": {
                        "type": "string",
                        "nullable": false
                    },
                    "surname": {
                        "type": "string",
                        "nullable": false
                    },
                    "phone": {
                        "type": "string"
                    },
                    "profilePictureId": {
                        "type": "integer"
                    }
                },
                "required": [
                    "email",
                    "firstName",
                    "surname",
                    "phone",
                    "profilePictureId"
                ]
            },

            "office": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "street": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "localityId": {
                        "type": "integer"
                    }
                }
            },

            "staff": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "email": {
                        "type": "email",
                        "format": "email"
                    },
                    "registrationNumber": {
                        "type": "integer"
                    },
                    "user": {
                        "$ref": "#/components/schemas/user"
                    },
                    "office": {
                        "$ref": "#/components/schemas/office"
                    },
                    "staffSpecialtyIds": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    }
                }
            },
            "staffSpecialty": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "updateStaff": {
                "properties": {
                    "phone": {
                        "type": "string"
                    },
                    "email": {
                        "type": "email",
                        "format": "email"
                    },
                    "staffSpecialtyIds": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/staffSpecialty"
                        },
                        "nullable": false,
                        "minLength": 1
                    }
                },
                "required": [
                    "phone",
                    "email",
                    "staffSpecialtyIds"
                ]
            },

            "patient": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "user": {
                        "$ref": "#/components/schemas/user"
                    },
                    "officeId": {
                        "type": "integer"
                    }
                }
            },

            "workday": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "start": {
                        "type": "object",
                        "properties": {
                            "hour": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 23
                            },
                            "minute": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 59
                            }
                        }
                    },
                    "end": {
                        "type": "object",
                        "properties": {
                            "hour": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 23
                            },
                            "minute": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 59
                            }
                        }
                    },
                    "day": {
                        "type": "string",
                        "enum": [
                            "MONDAY",
                            "TUESDAY",
                            "WEDNESDAY",
                            "THURSDAY",
                            "FRIDAY",
                            "SATURDAY",
                            "SUNDAY"
                        ]
                    },
                    "staffId": {
                        "type": "integer"
                    }
                }
            },
            "createWorkday": {
                "properties": {
                    "start": {
                        "type": "object",
                        "properties": {
                            "hour": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 23,
                                "required": true
                            },
                            "minute": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 59,
                                "required": true
                            }
                        },
                        "required": true
                    },
                    "end": {
                        "type": "object",
                        "properties": {
                            "hour": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 23,
                                "required": true
                            },
                            "minute": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 59,
                                "required": true
                            }
                        },
                        "required": true
                    },
                    "day": {
                        "type": "string",
                        "enum": [
                            "MONDAY",
                            "TUESDAY",
                            "WEDNESDAY",
                            "THURSDAY",
                            "FRIDAY",
                            "SATURDAY",
                            "SUNDAY"
                        ],
                        "required": true
                    }
                }
            },

            "appointment": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "PENDING",
                            "COMPLETE",
                            "CANCELLED",
                            "WAITING",
                            "SEEN"
                        ]
                    },
                    "date_from": {
                        "type": "long",
                        "format": "epoch millis"
                    },
                    "message": {
                        "type": "string"
                    },
                    "motive": {
                        "type": "string"
                    },
                    "patientId": {
                        "type": "integer"
                    },
                    "staffId": {
                        "type": "integer"
                    }
                }
            },
            "createAppointment": {
                "properties": {
                    "date_from": {
                        "type": "long",
                        "format": "epoch millis",
                        "required": true
                    },
                    "message": {
                        "type": "string"
                    },
                    "motive": {
                        "type": "string"
                    },
                    "staffId": {
                        "type": "integer",
                        "required": true
                    }
                }
            },
            "appointmentTimeslot": {
                "properties": {
                    "hour": {
                        "type": "integer"
                    },
                    "minute": {
                        "type": "integer"
                    },
                    "duration": {
                        "type": "integer"
                    }
                }
            },
            "appointmentTimeslotDate": {
                "properties": {
                    "date": {
                        "type": "object",
                        "properties": {
                            "day": {
                                "type": "integer"
                            },
                            "month": {
                                "type": "integer"
                            },
                            "year": {
                                "type": "integer"
                            }
                        }
                    },
                    "timeslots": {
                        "type": "array",
                        "items": [
                            {
                                "$ref": "#/components/schemas/appointmentTimeslot"
                            }
                        ]
                    }
                }
            },

            "error": {
                "properties": {
                    "code": {
                        "type": "integer"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        },
        "responses": {
            "get-staff": {
                "description": "Successful",
                "content": {
                    "application/vnd.staff.get.v1+json": {
                        "schema": {
                            "$ref": "#/components/schemas/staff"
                        }
                    }
                }
            },
            "get-user": {
                "description": "Successful",
                "content": {
                    "application/vnd.user.get.v1+json": {
                        "schema": {
                            "$ref": "#/components/schemas/user"
                        }
                    }
                }
            },
            "get-appointment": {
                "description": "Successful",
                "content": {
                    "application/vnd.appointment.get.v1+json": {
                        "schema": {
                            "$ref": "#/components/schemas/appointment"
                        }
                    }
                }
            },
            "get-workday": {
                "description": "Successful",
                "content": {
                    "application/vnd.workday.get.v1+json": {
                        "schema": {
                            "$ref": "#/components/schemas/workday"
                        }
                    }
                }
            },
            "error-400": {
                "description": "Not found",
                "content": {
                    "application/vnd.error.v1+json": {
                        "schema": {
                            "$ref": "#/components/schemas/error"
                        }
                    }
                }
            },
            "error-404": {
                "description": "Not found",
                "content": {
                    "application/vnd.error.v1+json": {
                        "schema": {
                            "$ref": "#/components/schemas/error"
                        }
                    }
                }
            }
        }
    },

    "paths": {
        "/staffs": {
            "get": {
                "summary": "List all staffs",
                "parameters": [
                    {
                        "in": "query",
                        "name": "page",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "in": "query",
                        "name": "items",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "items per page"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful",

                        "content": {
                            "application/vnd.staff.list.get.v1+json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/staff"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
